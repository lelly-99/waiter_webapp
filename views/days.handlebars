<style>
    .orange { color: orange; }
    .yellow { color: yellow; }
    .green { color: green; }
    .blue { color: red; }
    i {
      padding: 10px;
    }
</style>
<i class="fa fa-circle" style="font-size:20px;color:orange"></i> Not enough waiters - 1
<i class="fa fa-circle" style="font-size:20px;color:yellow"></i> Not enough waiters - 2
<i class="fa fa-circle" style="font-size:20px;color:green"></i> Enough waiters - 3
<i class="fa fa-circle" style="font-size:20px;color:red"></i> Too many waiters - 4 and above
<h3>Schedule</h3>
<p class="greeni" style="color: green;">{{messages.clear}}</p>
<table class="table">
    <tbody>
        {{#each scheduleData}}
        <tr>
            <td style="background-color: {{#if this}}{{lookup ../coloredCounts @key}}{{/if}}; color: black">{{@key}}</td>
            <td style="background-color: {{#if this}}{{lookup ../coloredCounts @key}}{{/if}}; color: black">
                {{#each this}}
                {{this}}
                {{/each}}
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
<form action="/reset" method="POST">
    <button class="btn btn-primary" type="submit">Clear Schedule</button>
</form>

<script>
   setTimeout(function () { document.querySelector('.greeni').innerHTML = ''; },
  3000);
</script>
 








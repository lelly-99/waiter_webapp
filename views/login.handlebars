<style>
  p, h3 { 
    text-align: center;
   } 
  button { width: 300px; }
  input {
    border-radius: 2px;
  width: 300px;
  height: 40px;
  margin: 5px 0 22px 0;
  border: none;
  background: #f1f1f1;
}
input {
  color: black;
}
</style>
<div class="container">
  <form action="/login" method="POST"> 
    <h3>Login</h3>
    <p style="color: green;" class="greener">{{messages.success}}</p>
    <p style="color: red;" class="reder">{{messages.error}}</p>
    <hr>
    <label for="name"><b>Username</b></label><br>
    <input type="text" id="name" name="name" placeholder="Enter your name"><br><br>
    <label for="password"><b>Password</b></label><br>
    <input type="password" id="password" name="password" placeholder="Enter password">
    <br>
    <br>
    <button type="submit" class="btn btn-primary">Login</button>
    <div class="container signin">
      <p>Don't have an account? <a href="/">Sign Up</a>.</p>
    </div>
  </form>
</div>
 <script>
  setTimeout(function () { document.querySelector('.reder').innerHTML = ''; },
  3000);
   setTimeout(function () { document.querySelector('.greener').innerHTML = ''; },
  7000);
</script> 
